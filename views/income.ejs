<% include partials/head %>
  <% include partials/nav %>
    <body>
      <div class="wrapper padded">
        <div class="row">
        <div col-md-6 col-md-offset-3>
          <h2 class="text-center">Hi, here's a list of all the your incomes</h2>
            <br>
            <table class="table table-striped table-hover ">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Income Type</th>
                  <th>Amount</th>
                  <th>Delete from history</th>
                </tr>
              </thead>
              <tbody>
                <% if(data) { %>
                  <% let count = 1 %>
                  <% for(datas in data) { %>
                  <tr>
                    <td><%= count %></td>
                    <td><%= data[datas].incomeType %></td>
                    <td><%=data[datas].description %></td>
                    <td><%=data[datas].amount%></td>
                    <td><a class = "btn btn-primary" href = '/delete?id=<%= data[datas].id %>'>Delete</a></td>
                  </tr>
                  <% count += 1 %>
                  <% } %>
                <% } else { %>
                  <p class="text-center lead">No records yet</p>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <% include partials/footer %>
    </body>