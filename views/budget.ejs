<% include partials/head %>
  <% include partials/nav %>
    <body>
        <div class="wrapper">
          <div class="row">
            <div class="col-md-6 col-md-offset-3">

            <% if(error) { %>
            <div class = "alert alert-danger alert-dismissable">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <%= error %>
            </div>
            <% } %>

              <form class="form" method ='post' action ='/budget'>
                <div class="form-group">
                  <div class = "row">
                  <div class = "col-lg-12">
                  <h3>Select Section</h3>
                  <select class="form-control" id="eguono" name="eguono">
                    <option>Budget</option>
                    <option>Actual</option>
                  </select>
                  </div>
                  <div class = "col-lg-4">
                  <h3>Budget Month</h3>
                  <select class="form-control" id="month" name="month">
                    <option>January</option>
                    <option>February</option>
                    <option>March</option>
                    <option>April</option>
                    <option>May</option>
                    <option>June</option>
                    <option>July</option>
                    <option>August</option>
                    <option>September</option>
                    <option>October</option>
                    <option>November</option>
                    <option>December</option>
                  </select>
                  </div>

                
                <div class = "col-md-8">
                  <h3>Income</h3>
                  <label for="income" class="sr-only">Income</label>
                  <input type="number" id="income" name="income" class="form-control" placeholder="Income " required autofocus>
                </div>

               
              </div>
              </div>
                 <br>
                 <br>
                <h3>Fixed Costs</h3>
                <label for="rent" class="sr-only">Rent</label>
                <input type="number" id="rent" name="rent" class="form-control required" placeholder="Rent" required autofocus>
                <label for="utilities" class="sr-only">Utilities</label>
                <input type="number" id="utilities" name="utilities" class="form-control" : after placeholder="Utilities" required autofocus>
                <label for="insurance" class="sr-only">Insurance</label>
                <input type="number" id="insurance" name="insurance" class="form-control" placeholder="Insuarance" required autofocus>

                <h3>Flex Expenses</h3>
                <div class="form-group">
                  <div class="col-lg-6">
                    <input type="number" name="groceries" class="form-control" placeholder="Groceries" id="groceries">
                  </div>
                  <div class="col-md-6">
                    <input type="number" class="form-control" name="health" placeholder="Health" id="health">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-lg-6">
                    <input type="number" class="form-control" name="entertainment" placeholder="Entertainment" id="entertainment">
                  </div>
                  <div class="col-md-6">
                    <input type="number" class="form-control" name="restaurant" placeholder="Restaurant & Bar" id="restaurant">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-lg-6">
                    <input type="number" class="form-control" name="personalcare" placeholder="Personal Care" id="personalcare">
                  </div>
                  <div class="col-md-6">
                    <input type="number" class="form-control" name="servicecharges" placeholder="Service Charges" id="servicecharges">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-lg-6">
                    <input type="number" class="form-control" name="shopping" placeholder="Shopping" id="shopping">
                  </div>
                  <div class="col-md-6">
                    <input type="number" class="form-control" name="gifts" placeholder="Gifts" id="gifts">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-lg-6">
                    <input type="number" class="form-control" name="travel" placeholder="Travel" id="travel">
                  </div>
                  <div class="col-md-6">
                    <input type="number" class="form-control" name="other" placeholder="Other" id="other">
                  </div>
                </div>

                <br>
                <div class="col-md-6 col-md-offset-6">
                <button class="btn btn-primary btn-block" name="settings" id="saveBudget">Save Expense</button>
              </div>
              </form>
            </div>
          </div>
        </div>
        <% include partials/footer %>
    </body>