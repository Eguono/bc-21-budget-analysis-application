<% include partials/head %>
    <body id="form_layout">
      <div class="container">
        <div class="row text-center">
          <img class="img-rounded" src="/img/budget.jpg" alt="AuthApp Login Image">
          <h2 class="heading text-primary">Library Application | Register</h2>
        </div>
        <div class="row">

      
          <div class="container">
              <div class="login">
                      <a href="/googleSignIn" class="btn btn-default btn-primary" id="login-btn"><i class="fa fa-google" aria-hidden="true"></i>
                            LOGIN WITH GOOGLE
                      </a>
              </div>
          </div>
          <br>
          <form class="form-signin" method = 'post' action = '/register'>
            <br>
            <label for="firstName" class="sr-only">First Name</label>
            <input type="text" id="firstName" name="firstName" class="form-control" placeholder="First Name" required autofocus>
            <label for="lastName" class="sr-only">Last Name</label>
            <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Last Name" required autofocus>
            <label for="email" class="sr-only">Email address</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required autofocus>  
            <label for="password" class="sr-only">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
            <label for="password1" class="sr-only">Confirm Password</label>
            <input type="password" id="password1" name="password1" class="form-control" placeholder="Confirm Password" required>
            
            <button class="btn btn-primary btn-block" type = "submit">Sign Up</button>
            <br>
            <p>Have An Account? <a href="/">Please Login</a></p>
          </form>
        </div>
      </div>
      <% include partials/footer %>
    </body>s