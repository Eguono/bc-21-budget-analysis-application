<% include partials/head %>

  <body>
    <main>
      <center>
        <img class="responsive-img" style="width: 350px; margin-top:20px; margin-radius:20%;" src="/img/budget.jpg" alt="AuthApp Login Image" />
        <div class="section"></div>

        <h5 class="teal-text" style="width:350px;">Please, login into your account</h5>
        <div class="section"></div>

        <div class="container">
          <div class="z-depth-1 grey lighten-4 row" style="max-width:350px; padding: 22px 20px 0px 20px; border: 1px solid #EEE;">

            <form class="col s12" method="post" action="/">
              <div class='row'>
                <div class='col s12'>
                </div>
              </div>

              <div class='row'>
                <div class='input-field col s12'>
                  <input class='validate' type='email' name='email' id='email' />
                  <label for='email'>Enter your email</label>
                </div>
              </div>

              <div class='row'>
                <div class='input-field col s12'>
                  <input class='validate' type='password' name='password' id='password' />
                  <label for='password'>Enter your password</label>
                </div>

              </div>

              <br />
              <center>
                <div class='row'>
                  <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect teal'>Login</button>
                </div>
              </center>
              <p>No Account? <a href="/register">Create An Account</a></p>
            </form>
          </div>
        </div>
        
      </center>

      <div class="section"></div>
      <div class="section"></div>
    </main>
  </body>
  <% include partials/footer %>